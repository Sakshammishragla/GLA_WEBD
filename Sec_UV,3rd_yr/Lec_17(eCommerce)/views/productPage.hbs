{{>navbar}}

<link rel="stylesheet" href="/css/star.css">

<div class="mt-4 d-flex justify-content-around">
    <div class="card" style="width: 18rem;">
        <img src="{{product.img}}" class="card-img-top" style="height: 18rem;" alt="...">
        <div class="card-body">
            <h5 class="card-title">{{product.name}}</h5>
            <h5 class="card-title">{{product.price}}</h5>
            <p class="card-text">{{product.desc}}</p>
            {{!-- <a href="#" class="btn btn-primary">Go somewhere</a> --}}
            <form action="/product/cart/{{product._id}}" method="post">
            <button>Add to cart</button>
            </form>
        </div>
    </div>

    <div>
        <form action="/product/{{product._id}}/addreview" method="get">
            <h1>Add Reviews</h1>
            <label for="rating">rating:-</label>
            {{!-- <input type="range" min="0" max="5" name="rating"><br> --}}
            <fieldset class="starability-basic">
                <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="0" checked
                    aria-label="No rating." />
                <input type="radio" id="first-rate1" name="rating" value="1" />
                <label for="first-rate1" title="Terrible">1 star</label>
                <input type="radio" id="first-rate2" name="rating" value="2" />
                <label for="first-rate2" title="Not good">2 stars</label>
                <input type="radio" id="first-rate3" name="rating" value="3" />
                <label for="first-rate3" title="Average">3 stars</label>
                <input type="radio" id="first-rate4" name="rating" value="4" />
                <label for="first-rate4" title="Very good">4 stars</label>
                <input type="radio" id="first-rate5" name="rating" value="5" />
                <label for="first-rate5" title="Amazing">5 stars</label>
            </fieldset>

            <label for="comment">comment:-</label>
            <input type="text" name="comment">
            <button class="btn btn-primary">Submit</button>
        </form>

        <div>
            {{#each product.reviews}}
            <div>
                <p class="starability-result" data-rating="{{this.rating}}">
                    Rated: {{this.rating}} stars
                </p>
                <p>{{this.comment}}</p>
            </div>
            {{/each}}
        </div>
    </div>

</div>